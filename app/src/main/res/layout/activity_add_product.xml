<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zaptas.printindiamart.seller.AddProduct">

    <RelativeLayout
        android:id="@+id/idRelativeAddProduct"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#F20288D1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/iv_white"
            android:text="Add your product"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/idRelativeAddProduct">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/imgg1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:drawableLeft="@drawable/upload"
                            android:onClick="image_upload1"
                            android:text="Image"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/imgg1s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="#ffffff"
                            android:drawableLeft="@drawable/suss"
                            android:onClick="image_upload1"
                            android:text="Done"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/imgg2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:drawableLeft="@drawable/upload"
                            android:onClick="image_upload2"
                            android:text="Image"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/imgg2s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="#ffffff"
                            android:drawableLeft="@drawable/suss"
                            android:onClick="image_upload2"
                            android:text="Done"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/imgg3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:drawableLeft="@drawable/upload"
                            android:onClick="image_upload3"
                            android:text="Image"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/imgg3s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="#ffffff"
                            android:drawableLeft="@drawable/suss"
                            android:onClick="image_upload3"
                            android:text="Done"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l1"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="260dp"
                        android:layout_height="50dp"

                        android:layout_below="@+id/textView1"
                        android:layout_alignParentLeft="true"
                        android:popupBackground="#FFFF99" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/textView1"
                        android:layout_alignParentLeft="true"
                        android:popupBackground="#FFFF99" />

                    <EditText
                        android:id="@+id/productname"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edt_text"
                        android:hint="Product Name"
                        android:paddingLeft="6dp"
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/product_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edt_text"
                        android:hint="Product Quantity"
                        android:inputType="number"
                        android:paddingLeft="6dp"
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/product_ammount"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edt_text"
                        android:hint="Ammount"
                        android:inputType="number"
                        android:paddingLeft="6dp"
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/product_desc"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edt_text"
                        android:hint="Product Description"
                        android:paddingLeft="6dp"
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/product_feature"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edt_text"
                        android:hint="Product Feature"
                        android:paddingLeft="6dp"
                        android:textColor="#000000" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/custom_button"
                        android:onClick="submit_data"
                        android:text="Submit"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


    <include layout="@layout/bottom_navigation" />
</RelativeLayout>
