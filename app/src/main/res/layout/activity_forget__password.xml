<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zaptas.printindiamart.Forget_Password">

    <RelativeLayout
        android:id="@+id/idRelativeForgetPassword"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#F20288D1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_iv_ForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/iv_iv_ForgetPassword"
            android:text="Reset your password"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/idRelativeForgetPassword"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/edt_text"
        android:hint="  Enter email id  "
        android:textColor="#000000"


        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:onClick="update"
            android:textColor="#fff"
            android:background="@drawable/custom_button"/>
    </LinearLayout>
</RelativeLayout>
