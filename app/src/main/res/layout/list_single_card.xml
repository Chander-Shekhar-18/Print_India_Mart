                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:textColor="#000000"
                android:textSize="12sp" />



